{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Web",
      "type": "shell",
      "command": "nix develop -c $SHELL -c 'pnpm --filter web dev'",
      "problemMatcher": [],
      "presentation": {
        "panel": "new",
        "reveal": "always",
        "echo": true
      },
      "options": {
        "cwd": "${workspaceFolder}/apps/my-artist-type/web"
      },
      "icon": {
        "id": "browser",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "Start Workspace",
      "dependsOn": ["Web"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
