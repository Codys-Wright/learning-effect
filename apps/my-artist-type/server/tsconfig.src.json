{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["vitest.config.ts", "src/**/*.test.ts"],
  "references": [{ "path": "../domain" }, { "path": "../database" }],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@my-artist-type/domain": ["../domain/src/index.js"],
      "@my-artist-type/domain/*": ["../domain/src/*.js"],
      "@my-artist-type/database": ["../database/src/index.js"],
      "@my-artist-type/database/*": ["../database/src/*.js"]
    }
  }
}
