{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "composite": false,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@org/domain": ["../domain/src/index.js"],
      "@org/domain/*": ["../domain/src/*.js"],
      "@org/server": ["../server/src/index.js"],
      "@org/server/*": ["../server/src/*.js"],
      "@org/database": ["../database/src/index.js"],
      "@org/database/*": ["../database/src/*.js"],

      "@core/client": ["../core/client/src/index.js"],
      "@core/client/*": ["../core/client/src/*.js"],
      "@core/domain": ["../core/domain/src/index.js"],
      "@core/domain/*": ["../core/domain/src/*.js"],
      "@core/server": ["../core/server/src/index.js"],
      "@core/server/*": ["../core/server/src/*.js"],
      "@core/database": ["../core/database/src/index.js"],
      "@core/database/*": ["../core/database/src/*.js"],
      "@org/shadcn": ["../ui/shadcn/src/index.js"],
      "@org/shadcn/*": ["../ui/shadcn/src/*.js"]
    }
  },
  "include": ["src", "prettier.config.js"],
  "references": [
    { "path": "../domain" },
    { "path": "../database" },
    { "path": "../server" },
    { "path": "../core/client" },
    { "path": "../core/domain" },
    { "path": "../core/database" },
    { "path": "../core/server" },
    { "path": "../ui/shadcn" }
  ]
}
