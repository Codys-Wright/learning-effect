{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    { "path": "../../core/domain/tsconfig.src.json" },
    { "path": "../../core/database/tsconfig.src.json" }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"],
      "@core/domain": ["../../core/domain/src/index.js"],
      "@core/domain/*": ["../../core/domain/src/*.js"],
      "@core/database": ["../../core/database/src/index.js"],
      "@core/database/*": ["../../core/database/src/*.js"]
    }
  }
}
