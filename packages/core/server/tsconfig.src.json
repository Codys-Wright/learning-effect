{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["vitest.config.ts", "src/**/*.test.ts"],
  "references": [{ "path": "../domain" }, { "path": "../database" }],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@my-artist-type/domain": ["../../../apps/my-artist-type/domain/src/index.js"],
      "@my-artist-type/domain/*": ["../../../apps/my-artist-type/domain/src/*.js"],
      "@my-artist-type/database": ["../../../apps/my-artist-type/database/src/index.js"],
      "@my-artist-type/database/*": ["../../../apps/my-artist-type/database/src/*.js"]
    }
  }
}
